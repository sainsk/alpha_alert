<p id="notice"><%= notice %></p>

<h1>Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Symbol</th>
      <th>Current price</th>
      <th>Cap price</th>
      <th>Floor price</th>
      <th>Expected alert till date</th>
      <th>Mobile number</th>
      <th>Phone alert</th>
      <th>Message alert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.name %></td>
        <td><%= alert.type %></td>
        <td><%= alert.symbol %></td>
        <td><%= alert.current_price %></td>
        <td><%= alert.cap_price %></td>
        <td><%= alert.floor_price %></td>
        <td><%= alert.expected_alert_till_date %></td>
        <td><%= alert.mobile_number %></td>
        <td><%= alert.phone_alert %></td>
        <td><%= alert.message_alert %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>

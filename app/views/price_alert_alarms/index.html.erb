<p id="notice"><%= notice %></p>

<h1>Price Alert Alarms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Alert type</th>
      <th>Symbol</th>
      <th>Current price</th>
      <th>Cap price</th>
      <th>Floor price</th>
      <th>Expected alert till date</th>
      <th>Mobile number</th>
      <th>Phone alert</th>
      <th>Message alert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @price_alert_alarms.each do |price_alert_alarm| %>
      <tr>
        <td><%= price_alert_alarm.name %></td>
        <td><%= price_alert_alarm.alert_type %></td>
        <td><%= price_alert_alarm.symbol %></td>
        <td><%= price_alert_alarm.current_price %></td>
        <td><%= price_alert_alarm.cap_price %></td>
        <td><%= price_alert_alarm.floor_price %></td>
        <td><%= price_alert_alarm.expected_alert_till_date %></td>
        <td><%= price_alert_alarm.mobile_number %></td>
        <td><%= price_alert_alarm.phone_alert %></td>
        <td><%= price_alert_alarm.message_alert %></td>
        <td><%= link_to 'Show', price_alert_alarm %></td>
        <td><%= link_to 'Edit', edit_price_alert_alarm_path(price_alert_alarm) %></td>
        <td><%= link_to 'Destroy', price_alert_alarm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

